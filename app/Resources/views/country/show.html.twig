{% extends 'base.html.twig' %}

{% block body %}
<div class="row pt-2">
    <div class="col-12">
        <h1>Country</h1>

        <table class="table-bordered table-dark table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ country.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ country.name }}</td>
                </tr>
                <tr>
                    <th>Picture</th>
                    <td><img class="flag" src="{{ country.picture }}"></td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('country_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('country_edit', { 'id': country.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
</div>
{% endblock %}
