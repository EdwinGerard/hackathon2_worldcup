{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="team-title text-center">
            <h1>Teams list</h1>
        </div>
        <table class="table table-striped table-dark table-hover">
            <thead class="thead-color">
            <tr>
                <th>Id</th>
                <th>Pays</th>
                <th>Nom</th>
                <th>Nbjoueur</th>
                <th>Temps</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for team in teams %}
                <tr>
                    <td><a href="{{ path('team_show', { 'id': team.id }) }}">{{ team.id }}</a></td>
                    <td><img src="{{ team.countryid.picture }}" height="80" width="120"></td>
                    <td>{{ team.nom }}</td>
                    <td>{{ team.nBjoueur }}</td>
                    <td>{% if team.temps %}{{ team.temps|date('H:i:s') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('team_show', { 'id': team.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('team_edit', { 'id': team.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('team_new') }}">Create a new team</a>
            </li>
        </ul>
    </div>

{% endblock %}