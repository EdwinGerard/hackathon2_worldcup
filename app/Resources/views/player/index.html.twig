{% extends 'base.html.twig' %}

{% block stylesheets %}


{% endblock %}

{% block body %}
    <section class="playerList">
    <div class="container-fluid">
        <div class="row">
            {% for player in players %}
                <div class="col-3">

                    <figure class="snip1477" style="background-image: url('{{ player.picture }}');  background-repeat: no-repeat; background-size: cover;">
                        <div class="title">
                            <div>
                                <h2>{{ player.name }}</h2>
                                <h4>{{ player.surname }}</h4>
                            </div>
                        </div>
                        <figcaption>
                            <img src="{{ player.teamid.countryid.picture}}">
                            <h3>Age : {{ player.age }} ans</h3>
                            <h3>Role : {{ player.role }}</h3>
                        </figcaption>
                        <a href="{{ player.id }}"></a>
                    </figure>
                </div>
            {% endfor %}
        </div>
    </div>
    </section>
{% endblock %}
